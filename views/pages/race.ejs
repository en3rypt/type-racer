<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <script>
            const roomId = "<%= roomId %>";
            const username = "<%= username %>";
        </script>
        <title>Race</title>
</head>

<body>
    <header>
        <%- include('../partials/navbar'); %>
    </header>
    <div class="container justify">
        <!-- Racers on track -->
        <div class="row">
            <div class="col">
                <h3>Room ID: <%= roomId %>
                </h3>
                <h2>Racers on track:</h2>
            </div>
        </div>
        <!-- player track -->
        <div id="player-tracks">
        </div>


        <div class="row text-center pt-5" id="w_text">
            <div class="col">
                <h2>Waiting for other players <span class="typing-effect">...</span></h2>
            </div>
        </div>

        <!-- text section -->
        <!-- <div class="row text-center pt-3">
            <div class="col">
                <h2>Text</h2>
            </div>
        </div> -->
        <div class="row text-justify pt-5">
            <!-- <div class="col typing-text">
                <p>
                    <%= para %>
                </p>
            </div> -->
            <div class="col content">
                <div class="wrapper">
                    <input type="text" class="input-field">
                    <div class="progress" style="height: 8px;">
                        <div id="practice-prog" class="progress-bar" role="progressbar"
                            style="width: 0%; background-color:black!important;" aria-valuenow="0" aria-valuemin="0"
                            aria-valuemax="100">
                        </div>
                    </div>
                    <div class="content-box">
                        <div class="typing-text">
                            <p>
                                <%= para %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6 col-md-3 text-center pt-5 pt-md-5">
                    <h4 class="time-left">Time left: <span>60</span></h4>
                </div>
                <div class="col-12 col-sm-6 col-md-3 text-center pt-3 pt-sm-5 pt-md-5">
                    <h4 class="mistakes">Mistakes: <span>0</span></h4>
                </div>
                <div class="col-12 col-sm-6 col-md-3 text-center pt-3 pt-md-5">
                    <h4 class="wpm">WPM: <span>0</span></h4>
                </div>
                <div class="col-12 col-sm-6 col-md-3 text-center pt-3 pt-md-5">
                    <h4 class="cpm">CPM: <span>0</span></h4>
                </div>
            </div>
            <div class="row text-center py-4">
                <div class="col">
                    <button class="try-again-btn">Restart.</button>
                    <!-- <button class="try-again-btn another-one-btn">Another one.</button> -->
                </div>
            </div>
        </div>
        <!-- <form>
            <div class="mb-3 mt-3">
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
        </form> -->

    </div>


    <%- include('../partials/footer'); %>
        <script src="https://cdn.socket.io/4.5.0/socket.io.min.js"
            integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k"
            crossorigin="anonymous"></script>
        <script src="/js/race.js"></script>
        <!-- <script src="./index.js"></script> -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

</body>

</html>