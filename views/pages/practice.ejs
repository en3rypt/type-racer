<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <title>Practice</title>
</head>

<body>
    <header>
        <%- include('../partials/navbar'); %>
    </header>
    <div class="container justify">

        <div class="row text-center pt-5">
            <div class="col">
                <h1>Let's Practice :D</h1>
            </div>
        </div>
        <div class="row">
            <div class="col content">
                <div class="wrapper">
                    <input type="text" class="input-field">
                    <div class="content-box">
                        <div class="typing-text">
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6 col-md-3 text-center pt-5 pt-md-5">
                    <h4 class="time-left">Time left: <span>60</span></h4>
                </div>
                <div class="col-12 col-sm-6 col-md-3 text-center pt-3 pt-sm-5 pt-md-5">
                    <h4 class="mistakes">Mistakes: <span>0</span></h4>
                </div>
                <div class="col-12 col-sm-6 col-md-3 text-center pt-3 pt-md-5">
                    <h4 class="wpm">WPM: <span>0</span></h4>
                </div>
                <div class="col-12 col-sm-6 col-md-3 text-center pt-3 pt-md-5">
                    <h4 class="cpm">CPM: <span>0</span></h4>
                </div>
            </div>
            <div class="row text-center py-4">
                <div class="col">
                    <button class="try-again-btn">Try Again</button>
                </div>
            </div>
        </div>
        <%- include('../partials/footer'); %>
            <script src="./js/script.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>

</body>

</html>